{% extends 'DogeFacebookBundle:Layout:layout.html.twig' %}

{% block content %}
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.3&appId=1431368163839906";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

<h1>Become the sublime model<br />of Kawaii Pets</h1>
<h3>Upload your cutest photo<br />to become the new ambassador of Kawaii Pets</h3>
<div id="gallery" class="clearfix">
    {% set i = 1 %}
    {% for k in 1 .. 6 %}
        {% if loop.index % 3 == 1 %}
            <div class="line clearfix">
        {% endif %}
        <div class="openpop {% if loop.index % 3 == 1 %}first{% elseif loop.index % 3 == 0 %}last{% endif %}">
            <a href="#id_{{ i }}" >
                <div class="hover_gallery"></div>
                <img src="/DogeSocialApp/web/bundles/dogefacebook/img/slide01.jpg" alt="">
            </a>
            <div class="fb-like" data-href="{{ app.request.host }}/1" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div></div>
        <div id="id_{{ loop.index }}" class="popup_participation">
            <a class="close" href=""><img alt="" src="{{ asset("bundles/dogefacebook/img/close.png") }}"></a>
            <div class="gal_content">
                <div class="frame">
                    <div class="visu"><div class="inside_visu"><img alt="" src="/DogeSocialApp/web/bundles/dogefacebook/img/slide01.jpg"></div></div>
                    <p class="pseudo">moi</p>
                    <p>okay</p>
                </div>
            </div>
        </div>
        {% if loop.index == 0 %}
            </div>
        {% endif %}
    {% endfor %}
	</div>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}